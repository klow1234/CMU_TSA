<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <!--
    Hello stranger. Why are you examining the source code for this website?
    There is nothing to find here. 

    If you really want to check out the source, head on over to
    http://github.com/yihuanz/CMU_TSA
    It is formatted nicely and I think it is much easier to read.
  -->
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <%= render '/refinery/head' %>
  <body>
    <%= site_bar -%>
    <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>
    <div class="container"> 
      <div id="page_container" class="logo_color titlebar">
        <div class="row logo_color">
          <div class="nav_bar">
            <div class="onecol last">
              <div class="logo">
                <%= link_to(image_tag('tsa_logo.png'), "/") %>
              </div>
            </div>
            <div class="twocol last">
              <div class="logo">
                <div class="title">
                  <%= link_to 'CMU TSA', "/" %>
                </div>
              </div>
            </div>
            <div class="ninecol last">
              <header id="header">
                <%= render(:partial => "/refinery/menu", :locals => {
                   :dom_id => 'menu',
                   :css => 'menu'
                 }) %>
              </header>
          </div>
        </div>
      </div>
    </div>
      <div id="page_container">
        <section id="page">
          <% if request.fullpath.to_s.include?("/blog") || request.fullpath == "/" %>
            <!-- <div id="fullwidth">
              <ul id="fullwidth_slider" class="jcarousel-skin-pika">
                <%# image_slider.each do |image| %>
                  <li>
                    <%#= image_fu image.photo, '1920x400#' %>
                    <span><%#= raw image.caption %></span>
                  </li>
                <%# end %>
              </ul>
            </div> -->
            <section id="jms-slideshow" class="jms-slideshow">
              <% image_slider.each do |image| %>

                <div class="step" data-color="<%= image.background_color %>" data-x="<%= image.data_x %>" data-y="<%= image.data_y %>" data-z="<%= image.data_z %>" data-rotate="<%= image.data_rotate %>">
                  <div class="jms-content">
                    <h3><%= image.title %></h3>
                    <%= raw image.content %>
                    <%= link_to 'Read more', image.link, :class => "jms-link" unless image.link.blank? %>
                  </div>
                  <%= image_fu image.photo, nil %>
                </div>
              <% end %>
            </section>
          <% end %>
          <div class="container"> 
            <div class="row">
              <div class="twelvecol last">
                <%= yield %>
              </div>
            </div>
          </div>
        </section>
        <div class="container"> 
          <div class="row">
            <div class="twelvecol last">
              <footer>
                <%= render '/refinery/footer' -%>
              </footer>
            </div>
          </div>
        </div>
      </div>
    <%= render '/refinery/javascripts' %>
  </body>
</html>
